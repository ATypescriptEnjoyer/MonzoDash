{
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "enabled": true,
      "groupName": "all dependencies",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "enabled": true,
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchFileNames": [
        "/"
      ],
      "groupName": "docker dependencies",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "enabled": true,
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "/client/"
      ],
      "groupName": "client dependencies",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
