// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AutomationRecordHistory {
  id                 Int               @id @default(autoincrement())
  automationRecord   AutomationRecord? @relation(fields: [automationRecordId], references: [id], onDelete: Cascade)
  automationRecordId Int?
  success            Boolean           @default(false)
  createdAt          DateTime          @default(now())
}

model AutomationRecord {
  id        Int                       @id @default(autoincrement())
  name      String
  triggers  Trigger[]
  actions   Action[]
  history   AutomationRecordHistory[]
  createdAt DateTime                  @default(now())
}

model Trigger {
  id                 Int               @id @default(autoincrement())
  key                String
  operator           TRIGGER_OPERATOR
  value              String
  automationRecord   AutomationRecord? @relation(fields: [automationRecordId], references: [id], onDelete: Cascade)
  automationRecordId Int?
  createdAt          DateTime          @default(now())

}

model Action {
  id                 Int               @id @default(autoincrement())
  action             Json
  automationRecord   AutomationRecord? @relation(fields: [automationRecordId], references: [id], onDelete: Cascade)
  automationRecordId Int?
  createdAt          DateTime          @default(now())

}

enum TRIGGER_OPERATOR {
  EQUALS
  NOT_EQUALS
}

model Auth {
  id           Int       @id @default(autoincrement())
  authToken    String
  refreshToken String
  expiresIn    DateTime?
  createdAt    DateTime  @default(now())
}
