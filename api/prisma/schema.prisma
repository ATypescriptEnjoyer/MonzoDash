// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AutomationRecord {
  id       Int       @id @default(autoincrement())
  name     String
  triggers Trigger[]
  actions  Action[]
}

model Trigger {
  id                 Int               @id @default(autoincrement())
  key                String
  operator           TRIGGER_OPERATOR
  value              String
  AutomationRecord   AutomationRecord? @relation(fields: [automationRecordId], references: [id])
  automationRecordId Int?
}

model Action {
  id                 Int               @id @default(autoincrement())
  action             Json
  AutomationRecord   AutomationRecord? @relation(fields: [automationRecordId], references: [id])
  automationRecordId Int?
}

enum TRIGGER_OPERATOR {
  EQUALS
  NOT_EQUALS
}

model Auth {
  id        Int           @id @default(autoincrement())
  authToken String
  refreshToken String
  expiresIn DateTime?
}
